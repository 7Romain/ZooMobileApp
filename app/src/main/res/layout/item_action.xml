<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="17dp">

    <androidx.cardview.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardBackgroundColor="@color/lightTeal"
        app:cardCornerRadius="20dp"
        app:cardElevation="5dp">


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:orientation="horizontal"
            android:shrinkColumns="1"
            android:stretchColumns="1">


            <TableRow>

                <TextView
                    android:padding="3dip"
                    android:text="Date" />

                <TextView
                    android:id="@+id/dateText"
                    android:gravity="center"
                    android:padding="3dip"
                    android:text="2022-11-17 17:05" />
            </TableRow>

            <TableRow>

                <TextView
                    android:padding="3dip"
                    android:text="Espèce" />

                <TextView
                    android:id="@+id/especeText"
                    android:gravity="center"
                    android:padding="3dip"
                    android:text="Marmotte" />
            </TableRow>

            <TableRow>

                <TextView
                    android:padding="3dip"
                    android:text="Animal" />

                <TextView
                    android:id="@+id/animalText"
                    android:gravity="center"
                    android:padding="3dip"
                    android:text="Monax" />
            </TableRow>

            <TableRow>

                <TextView
                    android:padding="3dip"
                    android:text="Enclos" />

                <TextView
                    android:id="@+id/enclosText"
                    android:gravity="center"
                    android:padding="3dip"
                    android:text="Montagne Chamois" />
            </TableRow>

            <TableRow>

                <TextView
                    android:padding="3dip"
                    android:text="@string/zone" />

                <TextView
                    android:id="@+id/zoneText"
                    android:gravity="center"
                    android:padding="3dip"
                    android:text="Montagne d'Europe"
                    tools:ignore="HardcodedText" />
            </TableRow>

            <TableRow>


                <TextView
                    android:padding="3dip"
                    android:text="Auteur"
                    tools:ignore="HardcodedText" />


                <TextView
                    android:id="@+id/auteurText"
                    android:gravity="center"
                    android:padding="3dip"
                    android:text="René Marie"
                    tools:ignore="HardcodedText" />
            </TableRow>

            <TableRow>

                <TextView

                    android:padding="3dip"
                    android:text="Action" />

                <TextView
                    android:id="@+id/obsText"
                    android:layout_height="wrap_content"
                    android:gravity="center"

                    android:padding="3dip"
                    android:text="Vérifier si bobak est rentré" />
            </TableRow>


        </TableLayout>


    </androidx.cardview.widget.CardView>
</LinearLayout>