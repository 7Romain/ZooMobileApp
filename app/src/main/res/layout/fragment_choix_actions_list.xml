<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_700">

    <androidx.cardview.widget.CardView
        android:id="@+id/parAnimal"
        android:layout_width="245dp"
        android:layout_height="100dp"
        android:layout_marginBottom="0dp"
        app:cardBackgroundColor="@color/black"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="imageConsulterActionsparAnimal"
            android:scaleType="centerCrop"
            android:src="@drawable/animal" />

        <TextView
            style="@style/cardTitleStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Animal" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/parZone"
        android:layout_width="245dp"
        android:layout_height="100dp"
        android:layout_marginTop="0dp"
        app:cardBackgroundColor="@color/black"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="imageConsulterActionsparZone"
            android:scaleType="centerCrop"
            android:src="@drawable/saisons" />

        <TextView
            style="@style/cardTitleStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Zone" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <androidx.cardview.widget.CardView
        android:id="@+id/parEspece"
        android:layout_width="245dp"
        android:layout_height="100dp"
        android:layout_marginBottom="224dp"
        app:cardBackgroundColor="@color/black"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="imageConsulterActionsparEspece"
            android:scaleType="centerCrop"
            android:src="@drawable/espece" />

        <TextView
            style="@style/cardTitleStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="EspÃ¨ce" />


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView

        android:id="@+id/parEnclos"
        android:layout_width="245dp"
        android:layout_height="100dp"

        android:layout_marginTop="224dp"
        app:cardBackgroundColor="@color/black"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="imageConsulterActionsparEnclos"
            android:scaleType="centerCrop"
            android:src="@drawable/enclos" />

        <TextView
            style="@style/cardTitleStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Enclos" />


    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>